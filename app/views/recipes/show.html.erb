<%= stylesheet_link_tag "recipe", "data-turbo-track": "reload" %>
<section class="recipe-show">
<h1><%= @recipe.name %></h1>
    <div class="food-container">
        <div class="food-name">
            <p>Preparation time:<%= @recipe.preparation_time  %>hours</p>
            <p>Cooking time: <%= @recipe.cooking_time %></p>
            <p>Description: <%= @recipe.description%></p>  
        </div>
        <%= form_for @recipe, url: public_recipe_path(@recipe), method: :put do |f| %>
  <div class="swith-btn">
    <p>Public</p>
    <label class="switch">
      <%= f.check_box :public, { checked: @recipe.public } %>
      <span class="slider round"></span>
    </label>
  </div>
<% end %>

    </div>
    <div class="recipe-btns">
        <%= link_to 'Generate Shopping List', new_food_path(), class: 'button' %>
        <%= link_to 'Add ingredient', new_food_path(), class: 'button' %>
    </div>
    <table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th class="action">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe.foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.quantity %> <%= food.measurement_unit%></td>
        <td><%= food.price %></td>
        <td>
            <%= link_to 'Delete', food_path(food), data: { turbo_method: :delete }, class: 'delete-btn' %>
            <%= link_to 'Modify', food_path(food), data: { turbo_method: :delete }, class: ' delete-btn modify-btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>